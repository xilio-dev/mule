<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stackoka.stackoka.repository.tag.TagMapper">
    <select id="selectTagsByArticleId" resultType="com.stackoka.stackoka.common.data.tag.Tag">
        SELECT t.id,
               t.name,
               t.user_id AS userId
        FROM tag t
                 INNER JOIN
             article_tag at
        ON t.id = at.tag_id
        WHERE
            at.article_id = #{articleId}
    </select>
</mapper>
